package com.epam.collection1;
import java.util.ArrayList;
import java.util.Scanner;

	public class List
	{
	    private static Scanner s;

		public static void main(String args[])
	    {
	    	ArrayList<Integer> ar=new ArrayList<Integer>();
	        s = new Scanner(System.in);
	        int ch=1;
	       
	        while (ch!=0)
	        {	
	        	System.out.println("enter you choice:\n1:add country\n2:get county by index\n3:get index of contry \n4:enter positoin to delete\n6:print()\n7:press enter 0 exit\n enter your choice:");
	            ch=s.nextInt();
	            if(ch==1)
	            {
	            	 ar.add(s.nextInt());
	            }
	            else if(ch==2)
	            {
	                System.out.println("Element is:"+ar.get(s.nextInt()));
	            }
	            else if(ch==3)
	            {
	                System.out.println("Position is:"+ar.indexOf(s.nextInt()));
	            }
	            else if(ch==4)
	            {
	            	ar.remove(ar.get(s.nextInt()));
	            }
	            else if(ch==5)
	            {
	            	 ar.remove(ar.get(ar.size()-1));
	            }
	            else
	            {
	            	System.out.print(ar);
	    	        System.out.println();
	            }
	        }
	    }
	}
	
